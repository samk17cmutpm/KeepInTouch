<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@color/main_color_grey_50"
    android:baselineAligned="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="59dp"
        android:layout_height="match_parent"
        android:layout_weight="0.69">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="0.86"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewContactNameImport"
            android:layout_weight="0.50"
            android:textColor="@color/main_color_grey_700"
            android:textIsSelectable="false"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textViewPhoneNumberShowing"
            android:layout_weight="0.27"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:textColor="@color/main_color_grey_700"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.55"
        android:weightSum="1">


        <CheckBox
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:id="@+id/checkBoxContactImport"
            android:layout_gravity="center_vertical|left"
            android:gravity="center|center_vertical|end" />
    </LinearLayout>

</LinearLayout>