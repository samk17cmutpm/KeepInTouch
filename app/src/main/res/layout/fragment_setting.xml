<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.keepintouch.fragment.SettingFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.32"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Set Alarm"
                android:id="@+id/textView4"
                android:textColor="@color/main_color_500"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp" />

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Alarm"
                android:id="@+id/switchAlarm"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.32"
                android:textColor="@color/main_color_500"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Time"
                android:id="@+id/textView7"
                android:textColor="@color/main_color_500"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_gravity="bottom|center"
                android:max="24"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/textViewSeekBar"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/main_color_500"
                android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.06"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Save Back Up"
                android:id="@+id/textView5"
                android:textColor="@color/main_color_500"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save Back Up"
                android:id="@+id/buttonSaveBackUp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/main_color_500"
                android:textColor="@color/cpb_white" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:weightSum="1"
            android:layout_weight="0.28"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Remove All Contacts"
                android:id="@+id/textView6"
                android:textColor="@color/main_color_500"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Remove all contacts"
                android:id="@+id/buttonRemoveDatabase"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/main_color_500"
                android:textColor="@color/cpb_white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
